@@ -49,4 +49,7 @@ fake-xinerama = %(fake_xinerama)s
 #xvfb = %(xdummy_command)s
 #
 # Selecting virtual X server:
-xvfb = %(xvfb_command)s
+xvfb = Xvfb -nolisten tcp -noreset \
+        +extension GLX +extension Composite \
+        -auth $XAUTHORITY \
+        -screen 0 8192x4096x24+32
